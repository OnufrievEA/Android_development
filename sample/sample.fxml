<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="background" alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <TextArea fx:id="chatText" editable="false" focusTraversable="false" wrapText="true"
              VBox.vgrow="ALWAYS">
        <font>
            <Font size="16.0"/>
        </font>
    </TextArea>

    <HBox>
        <TextField fx:id="messageText" onKeyPressed="#enterPressed" HBox.hgrow="ALWAYS">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>

        <Button fx:id="btnSend" onMouseClicked="#btnClicked" text="Send">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
